<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_vw_person_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="person information"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_vw_person_avatar"
        app:layout_constraintStart_toEndOf="@+id/img_vw_person_avatar"
        app:layout_constraintTop_toTopOf="@+id/img_vw_person_avatar"
        app:layout_constraintVertical_bias="0.516" />

    <ImageView
        android:id="@+id/img_vw_person_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>