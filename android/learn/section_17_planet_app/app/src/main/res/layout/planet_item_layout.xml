<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_vw_planet"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_vw_planet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Planet name"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/img_vw_planet"
        app:layout_constraintTop_toTopOf="@+id/img_vw_planet" />

    <TextView
        android:id="@+id/txt_vw_moon_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0 moon"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_vw_planet_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_vw_planet_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_vw_planet_name" />


</androidx.constraintlayout.widget.ConstraintLayout>